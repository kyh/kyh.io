{
  "extends": "@kyh/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "noUncheckedIndexedAccess": false,
  },
  "include": ["src", "scripts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
